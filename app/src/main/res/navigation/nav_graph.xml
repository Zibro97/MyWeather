<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherContainer">
    <fragment
        android:id="@+id/weatherContainer"
        android:name="com.example.myweather.view.fragment.WeatherFragment"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather"
        >
        <!--화면 간의 이동-->
        <action
            android:id="@+id/action_weatherContainer_to_favoriteContainer"
            app:destination="@+id/favoriteContainer"
            />
        <action
            android:id="@+id/action_weatherContainer_to_mapContainer"
            app:destination="@+id/mapContainer"
            />
    </fragment>
    <fragment
        android:id="@+id/favoriteContainer"
        android:name="com.example.myweather.view.fragment.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteContainer_to_weatherContainer"
            app:destination="@id/weatherContainer"
            app:popUpTo="@+id/weatherContainer"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_favoriteContainer_to_confirm_insert_dialog"
            app:destination="@id/confirm_insert_dialog" />
    </fragment>
    <fragment
        android:id="@+id/mapContainer"
        android:name="com.example.myweather.view.fragment.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">

    </fragment>
    <dialog
        android:id="@+id/confirm_insert_dialog"
        android:label="custom_dialog"
        tools:layout="@layout/insert_favorite_dialog_custom"
        >
        <argument
            android:name="location"
            app:argType="com.example.myweather.model.vworld.Location"
            />
        <action
            android:id="@+id/action_confirm_insert_dialog_to_favoriteContainer"
            app:destination="@id/favoriteContainer" />
    </dialog>
</navigation>