<?xml version="1.0" encoding="utf-8"?>
<!--Remote View의 경우 ConstraintLayout을 사용할 수 없음-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="110dp"
    tools:layout_width="110dp"
    android:background="@drawable/shape_widget_background"
    android:orientation="vertical"
    android:paddingStart="6dp"
    android:gravity="left|center"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_city_text_view"
        tools:text="광명시"
        android:textSize="10sp"
        android:textColor="@color/white"
        tools:ignore="SmallSp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_temp_text_view"
        android:text="로딩중"
        tools:ignore="HardcodedText"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="2°"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_description_text_view"
        android:textColor="@color/white"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="한때 흐림"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_max_min_text_view"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:ignore="SmallSp"
        tools:text="최고:6° 최저: -1°"
        android:visibility="gone"
        tools:visibility="visible"
        />
</LinearLayout>